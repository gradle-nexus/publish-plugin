{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "configMigration": true,
  "packageRules": [
    {
      "matchPackagePrefixes": [
        "publishing:maven"
      ],
      "enabled": false
    },
    {
      "groupName": "Retrofit monorepo",
      "description": "Group together all dependencies of Retrofit.",
      "matchPackagePrefixes": [
        "com.squareup.retrofit2:"
      ]
    }
  ]
}
